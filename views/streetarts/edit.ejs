<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">
            Edit Street Art
        </h1>
    
        <div class="col-6 offset-3">
            <form 
                action="/street-arts/<%=streetart._id %>?_method=PUT" 
                method="POST"
                novalidate
                class="validated-form"
            >
                <div class="mb-3">
                    <label 
                        class="form-label"
                        for="title"
                    >
                        Title
                    </label>
                    <input 
                        class="form-control"
                        type="text" 
                        id="title" 
                        name="streetart[title]"
                        value="<%=streetart.title%>"
                        required
                    />
                    <div class="valid-feedback">
                        Beautiful title!
                    </div>
                </div>
    
                <div class="mb-3">
                    <label 
                        class="form-label"
                        for="author" 
                    >
                        Author
                    </label>
                    <input 
                        class="form-control"
                        type="text"    
                        id="author" 
                        name="streetart[author]"
                        value="<%=streetart.author%>"
                    />
                </div>
        
                <div class="mb-3">
                    <label 
                        class="form-label"
                        for="location"
                    >
                        Location
                    </label>
                    <input 
                        class="form-control"
                        type="text"    
                        id="location" 
                        name="streetart[location]"
                        value="<%=streetart.location%>"
                        required
                    />
                    <div class="valid-feedback">
                        That's a cool place!
                    </div>
                </div>
        
                <div class="mb-3">
                    <label 
                        class="form-label"
                        for="image" 
                    >
                        Image Url 
                    </label>
                    <input 
                        class="form-control"
                        type="text"    
                        id="image" 
                        name="streetart[image]"
                        value="<%=streetart.image%>"
                        required
                    />
                    <div class="valid-feedback">
                        That's some cool art!
                    </div>
                </div>
    
                <div class="mb-3">
                    <label 
                        class="form-label"
                        for="description" 
                    >
                        Description
                    </label>
                    <textarea 
                        class="form-control"
                        type="text"    
                        id="description" 
                        name="streetart[description]"
                        required
                    >
                        <%= streetart.description %>
                    </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
    
                <div class="div mb-3">
                    <button class="btn btn-info">
                        Update Street Art
                    </button>
                </div>
    
            </form>
            <a href="/street-arts/<% streetart._id%>"> 
                Back to Street Art
            </a>
        </div>
    </div>